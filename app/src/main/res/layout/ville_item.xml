<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de la ville"
        android:id="@+id/texteNom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/texteNom"
        android:layout_toStartOf="@+id/texteNom"
        android:layout_alignBottom="@+id/texteNom" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/texteNom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="removeAtomPayOnClickHandler"/>

</RelativeLayout>